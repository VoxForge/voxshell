SHELL=/bin/sh
RM=@RM@ -f
RMDIR=@RM@ -fr
prefix=@prefix@
exec_prefix=@exec_prefix@
INSTALL=@INSTALL@

SUBDIRS=mkfa dfa_minimize

all:
	for d in $(SUBDIRS); do \
	  (cd $$d; $(MAKE)); \
	done

install:
	for d in $(SUBDIRS); do \
	  (cd $$d; $(MAKE) install); \
	done

install.bin:
	for d in $(SUBDIRS); do \
	  (cd $$d; $(MAKE) install.bin); \
	done

clean:
	for d in $(SUBDIRS); do \
	  (cd $$d; $(MAKE) clean); \
	done
	$(RM) config.log config.cache
	$(RMDIR) autom4te.cache

distclean:
	for d in $(SUBDIRS); do \
	  if test -f $$d/Makefile; then \
	   (cd $$d; $(MAKE) distclean); \
	  fi; \
	done
	$(RM) config.log config.cache
	$(RM) config.status
	$(RM) Makefile
	$(RMDIR) autom4te.cache
